PARSE_CMD(help, HELP,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);   
},
{
	std::cout << "..." << std::endl;
})

PARSE_CMD(quit, QUIT, 
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);    
},
{
	quit = true;
})

PARSE_CMD(file, SET_FILE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    if (str_stream >> let)
        correct = !(str_stream >> let);      
},
{
	std::stringstream str_stream(req);
	std::string let;

	str_stream >> let;

	std::string file_name;
	str_stream >> file_name;

	file.ReadFile(file_name);
})

PARSE_CMD(get, GET_LINE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;

    if (str_stream >> num)
        correct = !(str_stream >> let);    
},
{
	std::stringstream str_stream(req);
	std::string let;

	str_stream >> let;

	unsigned long long num = 0;
	str_stream >> num;

    try {
        std::cout << file[num] << std::endl;
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(cat, CAT_FILE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);      
},
{
    try {
	   file.CatFile();
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(set, SET_LINE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;

    correct = static_cast<bool>(str_stream >> num);    
},
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;
    str_stream >> num;
    
    std::string set_str;

    str_stream.ignore(1);
    getline(str_stream, set_str);

    try {
        file[num] = set_str;
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(save, SAVE_FILE,
{ 
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);
},
{
    try {
        file.WriteFile();
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(clear, CLEAR,
{ 
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);  
},
{
    system("clear");
})

PARSE_CMD(add, ADD_LINE,
{ 
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;

    correct = static_cast<bool>(str_stream >> num);    
},
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;
    str_stream >> num;
    
    std::string add_str;

    str_stream.ignore(1);
    getline(str_stream, add_str);

    try {
        file.AddLine(add_str, num);
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(, SKIP_LINE, 
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    correct = !(str_stream >> let);    
},
{
    std::cout << "YES MASTER!" << std::endl;
})