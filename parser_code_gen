PARSE_CMD(help, HELP, 
{
	std::cout << "..." << std::endl;
})

PARSE_CMD(quit, QUIT,
{
	quit = true;
})

PARSE_CMD(file, SET_FILE,
{
	std::stringstream str_stream(req);
	std::string let;

	str_stream >> let;

	std::string file_name;
	str_stream >> file_name;

	file.ReadFile(file_name);
})

PARSE_CMD(get, GET_LINE,
{
	std::stringstream str_stream(req);
	std::string let;

	str_stream >> let;

	unsigned long long num = 0;
	str_stream >> num;

    try {
        std::cout << file[num] << std::endl;
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(cat, CAT_FILE,
{
    try {
	   file.CatFile();
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(set, SET_LINE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;
    str_stream >> num;

    str_stream >> let;

    std::string set_str;
    getline(str_stream, set_str);

    set_str = let + set_str;

    try {
        file[num] = set_str;
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(save, SAVE_FILE,
{
    try {
        file.WriteFile();
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(clear, CLEAR,
{
    system("clear");
})

PARSE_CMD(add, ADD_LINE,
{
    std::stringstream str_stream(req);
    std::string let;

    str_stream >> let;

    unsigned long long num = 0;
    str_stream >> num;
    
    std::string add_str;

    str_stream.ignore(1);
    getline(str_stream, add_str);

    try {
        file.AddLine(add_str, num);
    } catch(std::out_of_range) {
        std::cout << "Out of range error: incorrect num of line." << std::endl;
    } catch(std::runtime_error) {
        std::cout << "Runtime error: chose file with command 'file'." << std::endl;
    }
})

PARSE_CMD(SKIP_LINE, SKIP_LINE, {})